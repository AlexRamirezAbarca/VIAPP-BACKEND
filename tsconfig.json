{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./dist",
    //"rootDir": "./src",
    "types": ["node", "express"],
    "esModuleInterop": true,
  }
  // "exclude": ["node_modules", "tmp"],
  // "include": ["src/**/*.ts"]
}